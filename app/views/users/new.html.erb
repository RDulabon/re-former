<%= form_for @user, url: {action: "create"}, html: {class: "user_form"} do |f| %>
  <%= f.label :email, "Your Email:" %>
  <%= f.text_field :email, value: "email@example.com" %>
  <%= f.label :username %> 
  <%= f.text_field :username, value: "Rufus McDoogle" %>
  <%= f.label :password %>
  <%= f.password_field :password, value: "Password" %>
  <%= f.submit "Submit" %>
<% end %> 

<% if false %>
<%= form_tag("/users", method: "POST") do %>
  <%= label_tag(:email, "Email:") %>
  <%= text_field_tag(:email) %>
  <br>
  <%= label_tag(:username, "Username:") %>
  <%= text_field_tag(:username) %>
  <br>
  <%= password_field_tag(:password) %>
  <br>
  <%= submit_tag("Submit") %> 
<% end %>
<% end %> 


